*, *::before, *::after
	box-sizing border-box
body
	font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
.container-fluid
	max-width 100%
	padding-right 15px
	padding-left 15px
	margin-right auto
	margin-left auto

.container
	width 98%
	// padding-right 15px
	// padding-left 15px
	margin-right auto
	margin-left auto

.row_b
	display flex
	// display block
	flex-wrap wrap
	flex-direction row
	padding-right 15px
	padding-left 15px

.col, .col-12, .col-xl-5, .col-xl-2, .col-md-3, .col-md-9
	position relative
	width 100%
	// min-height 1px
.col
	display flex
	flex-direction column
	// flex-basis 0
	// flex-grow 1
	// max-width 100%
.col-12 
	flex 0 0 100%
	max-width 100%
.justify-content-between
	justify-content space-between
.align-self-center
	align-self center
.align-self-end
	align-self flex-end
.pos-r
	position relative
.pos-a
	position absolute

.position-fixed
  position fixed
.d-block
	display block
.d-flex
	display flex
.align-items-center
	-ms-flex-align center
	align-items center
.justify-content-center
	justify-content: center
.justify-content-end
	justify-content flex-end
.text-center
	text-align center

.card
	display flex
	flex-direction column
	word-wrap break-word
	border: 1px solid rgba(111, 111, 111, 0.125)

@media (min-width: 576px)
	.container
		width 100%
@media (min-width: 768px)
	.container
		width 90%
.col-md-9
	flex 0 0 75%
	max-width 75%
	.container
		width 100%
@media (min-width: 992px)
	.container
		width 100%
		max-width 960px
@media (min-width: 1200px)
	.container
		max-width 80%
